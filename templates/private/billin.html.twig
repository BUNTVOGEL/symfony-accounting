{% extends 'base.html.twig' %}


{% block body_id 'login' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="#">accounting</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('private_billin') }}">IN <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link"href="{{ path('private_billout') }}">OUT</a>
                    </li>
                </ul>
                <div class="form-inline mt-2 mt-md-0">
                    <a class="btn btn-outline-success my-2 my-sm-0"  href="{{ path('security_logout') }}">Logout </a>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}
{% block main %}


<div class="container">

    <h1 style="padding-top: 70px;"> Billin - Einnahmen
    <a class="btn btn-outline-success my-2 my-sm-0"  href="{{ path('private_billin_new') }}">New</a>

    </h1>
    <div class="row">

        <div class="col-md-12">


            <table class="table table-striped table-middle-aligned">
                <thead>
                <tr>
                    <th scope="col">UID | rNr.</th>
                    <th scope="col">Datum</th>
                    <th scope="col">EUR</th>
                    <th scope="col">Artikel</th>

                    <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Aktionen</th>
                </tr>
                </thead>
                <tbody>
                {% for bill in bills %}
                    <tr>
                        <td>{{ bill.uid }} | {{ bill.rNr }}</td>
                        <td>{{ bill.billProvidedDateMm|date("d/m/Y") }}</td>
                        <td>{{ bill.billPrice|number_format(2, '.', ',') }} â‚¬</td>
                        <td>{{ bill.customerCompany|slice(0, 30) }}...</td>
                        <td class="text-right">
                            <div class="item-actions">
                                <a target="_blank" href="{{ path('public_billin_show', {uid: bill.uid,token: token}) }}" class="btn btn-sm btn-default">
                                    <i class="fa fa-eye" aria-hidden="true"></i> show
                                </a>

                                <a href="{{ path('private_billin_edit',  {uid: bill.uid}) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i> edit
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">No Bill</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
    </div>


</div>

{% endblock %}

